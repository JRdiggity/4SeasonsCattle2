@page
@model IndexModel
@{
    ViewData["Title"] = "Home page";
}

@section Head {
    <script defer type="text/javascript" src="~/js/contact.js"></script>
}
<!-- Navigation -->
<div class="page-top fixed-top">
    <div id="logoTag">
        <div id="logo">
            <a class="js-scroll-trigger navbar-brand img" href="#page-top">
                <img class="img-fluid" src="~/images/4seasonscattlelogo-min.jpg" href="/" alt="">
            </a>
        </div>
        <div id="tagline">
            <a asp-page="/News" class="js-scroll-trigger">Latest News</a>
            <span style="font-size: 20px; margin-left:5px; color: #999;">|</span>
            <a asp-page="/Gallery" class="js-scroll-trigger">Gallery</a>
            <span style="font-size: 20px; margin-left:5px; color: #999;">|</span>
            <strong>814.937.6919</strong>
            <span style="font-size: 20px; margin-left:5px; color: #999;">|</span>
            <a href="https://www.facebook.com/4seasonscattle/">
                <i class="fa fa-facebook fa-fw fa-lg" style="color:#3b5998"></i>
            </a>
        </div>
    </div>

    <nav class="navbar navbar-expand-lg" id="mainNav">
        <div class="container">
            <a class="js-scroll-trigger btn btn-md" href="#contact" id="buyBtn">BUY</a>
